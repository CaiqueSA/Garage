<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_corrida_mapa1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pista1_play"
    tools:context="br.com.unip.garage.activity.CorridaMapa1Activity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/bandeira_largada" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/icone_pitstop" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="180dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/farol_apagado" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/botao_pitstop" />

    <!-- Carros -->
    <ImageView
        android:id="@+id/icone_corrida_1_usuario"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/icone_azul" />

</RelativeLayout>
