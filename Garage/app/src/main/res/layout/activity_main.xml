<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.unip.garage.MainActivity"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    android:background="@drawable/background_home"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bot達o_trofeu"
        android:id="@+id/botaoTrofeu"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="98dp"
        android:layout_marginEnd="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bot達o_menu"
        android:id="@+id/botaoMenu"
        android:layout_alignTop="@+id/botaoJogar"
        android:layout_toLeftOf="@+id/botaoJogar"
        android:layout_toStartOf="@+id/botaoJogar"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bot達o_jogar"
        android:id="@+id/botaoJogar"
        android:layout_alignTop="@+id/botaoLoja"
        android:layout_toLeftOf="@+id/botaoLoja"
        android:layout_toStartOf="@+id/botaoLoja"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bot達o_loja"
        android:id="@+id/botaoLoja"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/botaoTrofeu"
        android:layout_toLeftOf="@+id/botaoTrofeu"
        android:layout_toStartOf="@+id/botaoTrofeu" />

</RelativeLayout>
